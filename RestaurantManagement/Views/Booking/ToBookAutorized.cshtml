@model RestaurantManagement.ViewModels.MultipleTypesViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Booking page</title>
</head>
<body>
    <div>
        <h3>Booking Form</h3>
        <p>To book the table fill the fields below:</p>
        <form method="post">
            <table>
                <tr>
                    <td>Table number</td>
                    <td>Capacity</td>
                    <td>Hall placing</td>

                    <td></td>
                </tr>

                @foreach (var table in ViewBag.Table)
                {

                    <tr>

                        <td>@table.TableNumber</td>
                        <td>@table.Capacity</td>
                        <td>@table.HallPlacing</td>


                    </tr>

                }

            </table>
            <input type="hidden" value="@ViewBag.TableId" name="TableId" />
            <table>
                <tr>
                    <td>First name</td>
                    <td>Second name</td>
                    <td>Phone number</td>

                    <td></td>
                </tr>

                @foreach (var user in ViewBag.User)
                {

                    <tr>

                        <td>@user.FirstName</td>
                        <td>@user.SecondName</td>
                        <td>@user.PhoneNumber</td>


                    </tr>

                }
                <tr><td><input type="submit" value="Submit" /> </td><td></td></tr>
            </table>

        </form>
        
    </div>
</body>
</html>