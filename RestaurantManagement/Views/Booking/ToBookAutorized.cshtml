@model IEnumerable<RestaurantManagement.DAL.Enteties.Meal>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Booking page</title>
</head>
<body>
    <div>
        <h3>Booking Form</h3>
        <form method="post">
            <table>
                <tr>
                    <td>Table number</td>
                    <td>Capacity</td>
                    <td>Hall placing</td>

                    <td></td>
                </tr>

                @foreach (var table in ViewBag.Table)
                {

                    <tr>

                        <td>@table.TableNumber</td>
                        <td>@table.Capacity</td>
                        <td>@table.HallPlacing</td>


                    </tr>

                }

            </table>
            <input type="hidden" value="@ViewBag.TableId" name="TableId" />
            <table>
                <tr>
                    <td>First name</td>
                    <td>Second name</td>
                    <td>Phone number</td>

                    <td></td>
                </tr>

                @foreach (var user in ViewBag.User)
                {

                    <tr>

                        <td>@user.FirstName</td>
                        <td>@user.SecondName</td>
                        <td>@user.PhoneNumber</td>


                    </tr>

                }
            </table>
            <table class="table">
                
                <thead>
                    <tr>
                        <td>Meal Name</td>
                        <td>Description</td>
                        <td>Image</td>
                        <td>Price</td>
                        <td>Amount</td>

                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Meal)
                    {
                    <tr>
                        <td>
                            @item.MealName
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            <a href="@("Images/"+item.ImagePath)">
                                <img src="@("~/Images/"+item.ImagePath)" asp-append-version="true" width="50" height="50" />
                            </a>
                        </td>
                        <td>
                            @item.UnitPrice
                            <input type="checkbox" name="MealId" value="@item.MealId">
                        </td>
                        <td>
                            <input type="number" min="1" name="amount" />
                        </td>
                    </tr>

                    }
                </tbody>
                <tr><td><input type="submit" value="Submit" /> </td><td></td></tr>
            </table>
        </form>
        
    </div>
</body>
</html>