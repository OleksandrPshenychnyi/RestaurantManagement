@model RestaurantManagement.ViewModels.MultipleTypesViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Booking page</title>
</head>
<body>
    <div>
        <h3>Booking Form</h3>
        <p>To book the table fill the fields below:</p>
        <form method="post">
            <input type="hidden" value="@ViewBag.TableId" name="TableId" />

            <table>
                <tr>
                    <td>First Name:</td>
                    <td><input type="text" name="FirstName"> </td>
                </tr>
                <tr>
                    <td>Second Name:</td>
                    <td><input type="text" name="SecondName" /></td>
                </tr>
                <tr>
                    <td>Phone Number:</td>
                    <td><input type="text" name="PhoneNumber" /></td>
                </tr>


            </table>


            <table class="table">
                <thead>
                    <tr>
                        <td>Meal Name</td>
                        <td>Description</td>
                        <td>Image</td>
                        <td>Price</td>
                        <td>Amount</td>

                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Meal)
                    {
                    <tr>
                        <td>
                            @item.MealName
                        </td>
                        <td>
                            @item.Description
                        </td>
                        <td>
                            <a href="@("Images/"+item.ImagePath)">
                                <img src="@("~/Images/"+item.ImagePath)" asp-append-version="true" width="50" height="50" />
                            </a>
                        </td>
                        <td>
                            @item.UnitPrice
                            <input type="checkbox" name="MealId" value="@item.MealId">
                        </td>
                        
                            <td>
                            <input type="number" min="1" name="amount" />
                            </td>
                    </tr>

                    }
                </tbody>
                <tr><td><input type="submit" value="Submit" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>